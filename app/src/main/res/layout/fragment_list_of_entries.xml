<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyBackground"
    android:orientation="vertical"
    tools:context="userlayer.fragments.FragmentListOfEntries">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:background="@drawable/border_unpressed">
        <Button
            android:id="@+id/UI_ListOfEntries_Button_Sorting"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:text="Sorting"
            android:drawableLeft="@drawable/icon_sort"
            android:paddingLeft="15dp"
            android:drawablePadding="-30dp"
            android:drawableTint="@color/colorTextGrey"
            android:textSize="20sp"
            android:background="@drawable/button_beige"
            android:textColor="@color/colorTextGrey"
            style="?android:attr/borderlessButtonStyle"
        />
        <Button
            android:id="@+id/UI_ListOfEntries_Button_Filter"
            android:layout_width="0dp"
            android:layout_weight="50"
            android:layout_height="match_parent"
            android:text="Filter"
            android:drawableLeft="@drawable/icon_filter"
            android:paddingLeft="15dp"
            android:drawablePadding="-30dp"
            android:drawableTint="@color/colorTextGrey"
            android:textSize="20sp"
            android:textColor="@color/colorTextGrey"
            android:background="@drawable/button_beige"
            style="?android:attr/borderlessButtonStyle"
        />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/UI_ListOfEntries_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
    />



</LinearLayout>