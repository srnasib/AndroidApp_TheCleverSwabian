<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/UI_Home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGreyBackground"
    android:weightSum="100"
    tools:context="userlayer.fragments.FragmentHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:weightSum="100"
        android:orientation="vertical"
        android:background="@drawable/button_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25">
            <userlayer.tools.AutoResizeTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Last month"
                android:textStyle="bold"
                android:textSize="21sp"
                android:singleLine ="true"
                android:textColor="@color/colorTextMain"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:weightSum="100">
            <Space
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
            />
            <userlayer.tools.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Expenses:"
                android:singleLine ="true"
                android:textSize="20sp"
                android:textColor="@color/colorTextRed"
            />
            <Space
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="match_parent"
            />
            <userlayer.tools.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Income:"
                android:singleLine ="true"
                android:textSize="20sp"
                android:textColor="@color/colorTextGreen"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:weightSum="100">
            <Space
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
            />
            <userlayer.tools.AutoResizeTextView
                android:id="@+id/UI_Home_Text_Expenses"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="- 834.23 €"
                android:singleLine ="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorTextRed"
            />
            <Space
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="match_parent"
            />
            <userlayer.tools.AutoResizeTextView
                android:id="@+id/UI_Home_Text_Income"
                android:layout_width="0dp"
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+ 334.23 €"
                android:singleLine ="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorTextGreen"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">
        <Button
            android:id="@+id/UI_Home_Button_AddNewEntry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add new entry"
            android:drawableLeft="@drawable/icon_plus"
            android:paddingLeft="15dp"
            android:drawablePadding="-30dp"
            android:textSize="24sp"
            android:background="@drawable/button_beige"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="26">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_unpressed"
            android:drawableLeft="@drawable/icon_noalert"
            android:drawablePadding="-30dp"
            android:paddingLeft="15dp"
            android:text="No warnings triggered"
            android:textColor="@color/colorTextGreen"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <userlayer.tools.AutoResizeTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Recent entries"
            android:textSize="20sp"
            android:singleLine ="true"
            android:textColor="@color/colorTextMain"
            android:textStyle="bold"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/UI_Home_Layout_Entry1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/UI_Home_Layout_Entry2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/UI_Home_Layout_Entry3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>